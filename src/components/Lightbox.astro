        margin-top: 27px;
        margin-right: 42px;
    }

    .lightbox__previous-image-container {
        position: absolute;
        bottom: 0;
        left: 42px;
        width: 50vw;
        height: 70%;
        cursor: pointer;
        display: flex;
        justify-content: flex-start;
        opacity: 0.5;
        z-index: 1;
    }
    .lightbox__previous-image-container:hover {
            opacity: 1;
        }

    .lightbox__next-image-container {
        position: absolute;
        bottom: 0;
        right: 42px;
        width: 50vw;
        height: 70%;
        cursor: pointer;
        display: flex;
        justify-content: flex-end;
        opacity: 0.5;
        z-index: 1;
    }
    .lightbox__next-image-container:hover {
            opacity: 1;
        }

    /* Lightbox media */
    .lightbox__media {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        width: 90%;
        max-height: 80vh;
        display: flex;
        justify-content: center;
    }

    .lightbox img {
        max-height: 70vh;
        max-width: 100%;
    }

    svg {
    width: 20px;
    }

    svg path {
        fill: white;
    }

    /* Mobile version */
    @media all and (max-width: 800px) {

        /* Lightbox controls */
        .lightbox__close-button {
            height: 85%;
        }
        .lightbox__previous-image-container,
        .lightbox__next-image-container {
            height: 15%;
        }
    }
</style>