<style>
    .lightbox {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(43, 43, 43, 0.575);
    }

    /* Lightbox controls */
    .lightbox__close-button {
        width: 100%;
        height: 30%;
        position: absolute;
        top: 0;
        right: 0;
        cursor: pointer;
        z-index: 1;
        display: flex;
        justify-content: flex-end;
        align-items: flex-start;
        opacity: 0.5;
    }
    .lightbox__close-button:hover {
            opacity: 1;
        }

